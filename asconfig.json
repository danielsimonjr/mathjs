{
  "extends": "assemblyscript/std/assembly.json",
  "targets": {
    "release": {
      "outFile": "lib/wasm/index.wasm",
      "textFile": "lib/wasm/index.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 1,
      "converge": true,
      "noAssert": false,
      "runtime": "incremental",
      "importMemory": false,
      "initialMemory": 256,
      "maximumMemory": 16384,
      "memoryBase": 0,
      "exportRuntime": true,
      "exportMemory": true
    },
    "debug": {
      "outFile": "lib/wasm/index.debug.wasm",
      "textFile": "lib/wasm/index.debug.wat",
      "sourceMap": true,
      "debug": true,
      "runtime": "stub",
      "importMemory": true,
      "initialMemory": 256,
      "maximumMemory": 16384
    },
    "simd": {
      "outFile": "lib/wasm/index.simd.wasm",
      "textFile": "lib/wasm/index.simd.wat",
      "sourceMap": true,
      "optimizeLevel": 3,
      "shrinkLevel": 1,
      "converge": true,
      "noAssert": false,
      "runtime": "incremental",
      "enable": ["simd"]
    }
  },
  "options": {
    "bindings": "esm",
    "exportStart": "_start",
    "enable": ["simd"]
  }
}
