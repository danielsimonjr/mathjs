{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "paths": {
      "mathjs": ["./types/index.d.ts"]
    },
    "moduleResolution": "nodenext",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha"],
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "NodeNext",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": [
    "src/wasm",
    "test/wasm/unit-tests",
    "lib",
    "dist",
    "node_modules"
  ]
}
